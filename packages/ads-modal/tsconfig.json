{
  "compilerOptions": {
    "target": "ES2019",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2021", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "dist",
    "incremental": true,
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "skipLibCheck": true,
    "declaration": true,
    "allowJs": true,
    "noImplicitAny": true,
    "plugins": [
      {
        "name": "ts-lit-plugin"
      }
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build", "dist", "*.md", "rollup.config.js"]
}
