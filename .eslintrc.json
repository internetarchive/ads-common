{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "rules": {
    "prefer-const": "error",
    "no-var": "error",
    "curly": "error",
    "spaced-comment": "error",
    "eqeqeq": "error",
    "complexity": "error",
    "camelcase": "error",
    "no-extra-boolean-cast": "off"
  },
  "env": {
    "browser": true,
    "es2021": true
  }
}